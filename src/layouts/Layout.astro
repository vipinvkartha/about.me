---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Professional profile and portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', system-ui, sans-serif;
    background: #09090b;
    color-scheme: dark;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    min-height: 100vh;
  }

  * {
    box-sizing: border-box;
  }

  section {
    opacity: 1;
    animation: none;
  }

  /* Timeline tree styles */
  .timeline-tree {
    --timeline-width: 2px;
    --node-size: 16px;
    --branch-height: 40px;
    position: relative;
    padding-top: 40px;
  }

  .timeline-vertical-line {
    width: var(--timeline-width);
    background: rgb(39 39 42);
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 0;
    bottom: 0;
    z-index: 0;
  }

  .timeline-node {
    width: var(--node-size);
    height: var(--node-size);
    background: rgb(161 161 170);
    border: 3px solid rgb(39 39 42);
    border-radius: 50%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    opacity: 0;
    animation: nodeReveal 0.5s ease forwards;
  }

  .timeline-branch {
    position: absolute;
    top: 50%;
    width: calc(50% - var(--node-size) / 2);
    height: var(--branch-height);
    z-index: 1;
  }

  .timeline-branch-left {
    right: 50%;
    margin-right: calc(var(--node-size) / 2);
  }

  .timeline-branch-right {
    left: 50%;
    margin-left: calc(var(--node-size) / 2);
  }

  .timeline-content {
    width: calc(50% - 40px);
    opacity: 0;
    animation: contentSlide 0.5s ease forwards;
    background: rgba(24, 24, 27, 0.8);
    border: 1px solid rgba(63, 63, 70, 0.4);
    border-radius: 0.5rem;
    padding: 1.5rem;
    position: relative;
  }

  .timeline-item {
    position: relative;
    min-height: 160px;
    margin: 2rem 0;
  }

  .timeline-item-left {
    display: flex;
    justify-content: flex-end;
    padding-right: 50%;
  }

  .timeline-item-right {
    display: flex;
    justify-content: flex-start;
    padding-left: 50%;
  }

  .timeline-item-left .timeline-content {
    margin-right: 40px;
    transform: translateX(20px);
  }

  .timeline-item-right .timeline-content {
    margin-left: 40px;
    transform: translateX(-20px);
  }

  @keyframes nodeReveal {
    from {
      opacity: 0;
      transform: translate(-50%, -50%) scale(0);
    }
    to {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }

  @keyframes contentSlide {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes branchGrow {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }

  .timeline-item .timeline-branch::before {
    content: '';
    position: absolute;
    top: 50%;
    height: var(--timeline-width);
    width: 100%;
    background: rgb(39 39 42);
    transform-origin: center left;
    animation: branchGrow 0.5s ease forwards;
  }

  .timeline-branch-left::before {
    right: 0;
    transform-origin: right;
  }

  .timeline-branch-right::before {
    left: 0;
    transform-origin: left;
  }

  /* Add stagger delay for timeline items */
  .timeline-item:nth-child(1) { --delay-multiplier: 0; }
  .timeline-item:nth-child(2) { --delay-multiplier: 1; }
  .timeline-item:nth-child(3) { --delay-multiplier: 2; }
  .timeline-item:nth-child(4) { --delay-multiplier: 3; }
  .timeline-item:nth-child(5) { --delay-multiplier: 4; }
  .timeline-item:nth-child(6) { --delay-multiplier: 5; }

  .timeline-item .timeline-node {
    animation-delay: calc(var(--delay-multiplier) * 0.2s);
  }

  .timeline-item .timeline-content {
    animation-delay: calc(var(--delay-multiplier) * 0.2s + 0.2s);
  }

  .timeline-item .timeline-branch::before {
    animation-delay: calc(var(--delay-multiplier) * 0.2s + 0.1s);
  }

  /* Hover effects */
  .timeline-content {
    transition: all 0.3s ease;
  }

  .timeline-content:hover {
    transform: translateX(0) scale(1.02);
    border-color: rgba(113, 113, 122, 0.4);
    box-shadow: 0 4px 20px -4px rgba(0, 0, 0, 0.1);
  }

  /* Experience cards within sections */
  .experience-content {
    background: rgba(24, 24, 27, 0.4);
    transform-style: preserve-3d;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .experience-card:hover .experience-content {
    transform: translateZ(40px) scale(1.03);
    background: rgba(39, 39, 42, 0.9);
    box-shadow: 
      0 0 0 1px rgba(255, 255, 255, 0.2),
      0 20px 40px -20px rgba(0, 0, 0, 0.5);
    z-index: 20;
  }

  /* Scroll reveal animations with stagger */
  .section-card {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .section-card.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  /* Stagger the reveal of sections */
  .section-card:nth-child(1) { transition-delay: 0.1s; }
  .section-card:nth-child(2) { transition-delay: 0.2s; }
  .section-card:nth-child(3) { transition-delay: 0.3s; }
  .section-card:nth-child(4) { transition-delay: 0.4s; }

  /* Add glow effect on hover */
  .section-content::before {
    content: '';
    position: absolute;
    inset: -1px;
    background: linear-gradient(
      45deg,
      transparent 0%,
      rgba(255, 255, 255, 0.1) 100%
    );
    z-index: -1;
    transition: opacity 0.5s ease;
    opacity: 0;
    border-radius: inherit;
  }

  .section-card:hover .section-content::before {
    opacity: 1;
  }

  /* Ensure proper stacking */
  .section-card {
    position: relative;
    z-index: 1;
  }

  .section-card:hover {
    z-index: 2;
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Improved focus styles */
  .section-content:focus-within {
    outline: none;
    box-shadow: 
      0 0 0 2px rgba(255, 255, 255, 0.2),
      0 20px 40px -20px rgba(0, 0, 0, 0.5);
  }

  /* Experience Carousel Styles */
  .experience-carousel {
    position: relative;
    width: 100%;
  }

  .experience-track {
    display: flex;
    width: 100%;
  }

  .experience-slide {
    width: 100%;
    flex-shrink: 0;
    padding: 0.5rem;
  }

  /* Smooth out the hover effect for slides */
  .experience-content {
    height: 100%;
    transform: translateZ(0);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .experience-slide:hover .experience-content {
    transform: translateZ(30px) scale(1.02);
    background: rgba(39, 39, 42, 0.9);
    box-shadow: 
      0 0 0 1px rgba(255, 255, 255, 0.2),
      0 20px 40px -20px rgba(0, 0, 0, 0.5);
  }

  /* Indicator animations */
  .exp-indicator {
    transition: all 0.3s ease;
  }

  .exp-indicator:hover {
    background-color: rgba(161, 161, 170, 0.5) !important;
  }

  /* Profile image styles */
  .profile-image-container {
    position: relative;
    transition: transform 0.3s ease;
  }

  .profile-image-container::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    border: 2px solid transparent;
    background: linear-gradient(45deg, rgba(255,255,255,0.1), rgba(255,255,255,0.2)) border-box;
    -webkit-mask: 
      linear-gradient(#fff 0 0) padding-box, 
      linear-gradient(#fff 0 0);
    mask: 
      linear-gradient(#fff 0 0) padding-box, 
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: destination-out;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .profile-image-container:hover::after {
    opacity: 1;
  }

  /* Timeline styles */
  .timeline-node {
    opacity: 0;
    transform: scale(0);
    animation: nodeReveal 0.5s ease forwards;
  }

  .timeline-content {
    opacity: 0;
    transform: translateX(-20px);
    animation: contentSlide 0.5s ease forwards 0.2s;
  }

  @keyframes nodeReveal {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes contentSlide {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .path-line {
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: drawLine 1s ease forwards 0.5s;
  }

  @keyframes drawLine {
    to {
      stroke-dashoffset: 0;
    }
  }

  /* Add stagger delay for timeline items */
  .timeline-item:nth-child(1) .timeline-node { animation-delay: 0.1s; }
  .timeline-item:nth-child(1) .timeline-content { animation-delay: 0.3s; }
  .timeline-item:nth-child(1) .path-line { animation-delay: 0.5s; }

  .timeline-item:nth-child(2) .timeline-node { animation-delay: 0.6s; }
  .timeline-item:nth-child(2) .timeline-content { animation-delay: 0.8s; }
  .timeline-item:nth-child(2) .path-line { animation-delay: 1s; }

  .timeline-item:nth-child(3) .timeline-node { animation-delay: 1.1s; }
  .timeline-item:nth-child(3) .timeline-content { animation-delay: 1.3s; }
  .timeline-item:nth-child(3) .path-line { animation-delay: 1.5s; }

  .timeline-item:nth-child(4) .timeline-node { animation-delay: 1.6s; }
  .timeline-item:nth-child(4) .timeline-content { animation-delay: 1.8s; }
  .timeline-item:nth-child(4) .path-line { animation-delay: 2s; }

  .timeline-item:nth-child(5) .timeline-node { animation-delay: 2.1s; }
  .timeline-item:nth-child(5) .timeline-content { animation-delay: 2.3s; }
  .timeline-item:nth-child(5) .path-line { animation-delay: 2.5s; }

  .timeline-item:nth-child(6) .timeline-node { animation-delay: 2.6s; }
  .timeline-item:nth-child(6) .timeline-content { animation-delay: 2.8s; }

  /* Timeline flowchart styles */
  .timeline-flow {
    position: relative;
    padding: 2rem 0;
    max-width: 100%;
  }

  .timeline-item {
    position: relative;
    padding-left: 3rem;
    margin-bottom: 3rem;
    width: 100%;
  }

  .timeline-node {
    position: absolute;
    left: 0;
    top: 1.5rem;
    width: 1rem;
    height: 1rem;
    background: rgb(161 161 170);
    border: 2px solid rgb(39 39 42);
    border-radius: 50%;
    z-index: 2;
    opacity: 0;
    animation: nodeReveal 0.5s ease forwards;
  }

  .timeline-curve {
    position: absolute;
    left: 0.45rem;
    top: 2.5rem;
    width: 2px;
    height: calc(100% + 1rem);
    background: rgb(39 39 42);
    z-index: 1;
  }

  .timeline-curve::before {
    content: '';
    position: absolute;
    top: -0.5rem;
    left: -0.5rem;
    width: 1.5rem;
    height: 2rem;
    border-left: 2px solid rgb(39 39 42);
    border-bottom: 2px solid rgb(39 39 42);
    border-bottom-left-radius: 1rem;
  }

  .timeline-content {
    background: rgba(24, 24, 27, 0.8);
    border: 1px solid rgba(63, 63, 70, 0.4);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin-left: 1rem;
    opacity: 0;
    transform: translateX(20px);
    animation: contentSlide 0.5s ease forwards;
    width: calc(100% - 2rem);
  }

  .timeline-content-inner {
    width: 100%;
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .timeline-company {
    flex: 1;
  }

  .timeline-details {
    text-align: right;
    flex-shrink: 0;
  }

  @keyframes nodeReveal {
    from {
      opacity: 0;
      transform: scale(0);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes contentSlide {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Add stagger delay for timeline items */
  .timeline-item:nth-child(1) { --delay-multiplier: 0; }
  .timeline-item:nth-child(2) { --delay-multiplier: 1; }
  .timeline-item:nth-child(3) { --delay-multiplier: 2; }
  .timeline-item:nth-child(4) { --delay-multiplier: 3; }
  .timeline-item:nth-child(5) { --delay-multiplier: 4; }
  .timeline-item:nth-child(6) { --delay-multiplier: 5; }

  .timeline-item .timeline-node {
    animation-delay: calc(var(--delay-multiplier) * 0.2s);
  }

  .timeline-item .timeline-content {
    animation-delay: calc(var(--delay-multiplier) * 0.2s + 0.2s);
  }

  /* Hover effects */
  .timeline-content {
    transition: all 0.3s ease;
  }

  .timeline-content:hover {
    transform: translateX(0) scale(1.02);
    border-color: rgba(113, 113, 122, 0.4);
    box-shadow: 0 4px 20px -4px rgba(0, 0, 0, 0.1);
  }

  /* Last item styles */
  .timeline-item:last-child .timeline-curve {
    display: none;
  }
</style>